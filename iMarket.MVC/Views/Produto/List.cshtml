@using iMarket.HtmlHelpers
@using iMarket.ViewModels
@model ProdutosListViewModel

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row panel">
    <div id="categorias" class="col-md-12 shop-tab-container">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 shop-tab-menu">
            <div class="list-group">
                @Html.Action("Menu", "Nav")
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 shop-tab">

            <h1>@ViewBag.DepartamentoSelecionado</h1>

            @foreach (var p in Model.Produtos)
            {
                @Html.Partial("ProductSummary", p)
            }

            <div class="btn-group pull-right">
                @Html.PageLinks(Model.PagingInfo, x => Url.Action("List",
                    new { pagina = x, departamento = Model.DepartamentoIdAtual }))
            </div>
        </div>
    </div>
</div>