@model IEnumerable<string>


@Html.ActionLink("Todos Produtos", "List", "Produto", null,
    new { @class = "list-group-item" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new {
    controller = "Produto",
    action = "List",
    departamento = link,
    pagina = 1
}, new {
    @class = "list-group-item"
            + (link == ViewBag.DepartamentoSelecionado ? " list-group-item" : "")
})
}

